                <li><a href="#" class="fa fa-behance"></a></li>
                <li><a href="#" class="fa fa-facebook"></a></li>
            </ul>
        </div>
    }
    else
    {
        <div class="brand-panel">
            <a href="@Url.Action("Index","Home")" class="brand">
                <img src="~/assets/img/logo/logo.png" alt="Alternate Text" class="logo_img" />
