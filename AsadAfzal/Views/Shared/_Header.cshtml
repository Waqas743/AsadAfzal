   <!-- Header -->
   @inject IHttpContextAccessor HttpContextAccessor
@{
    var routeValues = HttpContextAccessor.HttpContext?.GetRouteData()?.Values;
    var controller = routeValues?["controller"]?.ToString();
    var action = routeValues?["action"]?.ToString();
    var classes = (controller == "Home" && action == "Index") ? "header-home" : "header-inner";
}
<style>
    .logo_img {
        width: 120px;
    }

    @@media (max-width: 468px) {
        .logo_img {
            width: 80px !important;
        }
    }
</style>
<header id="top" class="@classes">
    @if (controller == "Home" && action == "Index")
    {
        <div class="brand-panel">
            <a href="@Url.Action("Index","Home")" class="brand js-target-scroll">
                <img src="~/assets/img/logo/logo.png" alt="Alternate Text" class="logo_img" />
            </a>
            <div class="brand-name">ASAD AFZAL</div>
            <div class="slide-number">
                <span class="current-number text-primary">0<span class="count">1</span></span>
                <sup><span class="delimiter">/</span> 0<span class="total-count"></span></sup>
            </div>
        </div>
        <div class="header-phone">+7 (212) 674-25-10</div>
        <div class="vertical-panel"></div>
        <div class="vertical-panel-content">
            <div class="vertical-panel-info">
